@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-primary">
                Create New Category
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>
                    Edit
                </th>
                <th>
                    Delete
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="50%">
                        @item.Name
                    </td>
                    <td width="50%">
                        @item.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group"></div>
                        <a asp-controller="Category" asp-action="EditCategory" asp-route-categoryId="@item.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group"></div>
                        <a asp-controller="Category" asp-action="DeleteCategory" asp-route-categoryId="@item.Id"><i class="bi bi-pencil-square"></i>Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

